<!--pages/mine/mine.wxml-->
<view style='width: 100%;  height: 40rpx' />
<view class="homepagePCard">
  <view class="point-box">
    <view class="inner"><text style="color:grey">语文:</text><input class="point-input" type="number" maxlength="3" /></view>
    <view class="inner"><text style="color:grey">数学:</text><input class="point-input" type="number" maxlength="3" /></view>
    <view class="inner"><text style="color:grey">外语:</text><input class="point-input" type="number" maxlength="3" /></view>
    <view class="inner"><text style="color:grey">物理:</text><input class="point-input" type="number" maxlength="3" /></view>
    <view class="inner"><text style="color:grey">化学:</text><input class="point-input" type="number" maxlength="3" /></view>
    <view class="inner"><text style="color:grey">生物:</text><input class="point-input" type="number" maxlength="3" /></view>
  </view>
  <view class="point-box" style="justify-content:space-between">
    <view class="inner">
      <text>总分:<text style="color:#644594">{{total}}</text></text>
      <text>全省:<text style="color:#644594">{{rank}}</text></text>
    </view>
    <view class="inner">
      <view bindtap="edit" class="fbtn">编辑</view>
      <view bindtap="saveInfo" class="fbtn">保存</view>
    </view>
  </view>
</view>
<view style='width: 100%;  height: 40rpx' />
 指导信息
<i-cell-group>
    <i-cell title="我的院校" is-link url="../quiz/quiz">
      <i-icon slot="icon" type="task_fill" />
    </i-cell>
    <i-cell title="我的专业" is-link url="../quiz/quiz">
      <i-icon slot="icon" type="task_fill" />
    </i-cell>
</i-cell-group>
<view style='width: 100%;  height: 40rpx' />
 About
<i-cell-group>
    <i-cell title="商务合作" is-link url="../about/business/business">
      <i-icon slot="icon" type="interactive_fill" />
    </i-cell>
    <i-cell title='关于“一帆志愿”' is-link url="../about/yifzy/yifzy">
      <i-icon slot="icon" type="interactive_fill" />
    </i-cell>
    <i-cell title='关于本系统' is-link url="../about/system/system">
      <i-icon slot="icon" type="interactive_fill" />
    </i-cell>
</i-cell-group>

<view style='width: 100%;  height: 40rpx' />
<i-button bind:click="handleClick" type="error">注销</i-button>


<i-tab-bar current="{{ current }}" color="#7952b3" bindchange="handleChange" fixed="true">
    <i-tab-bar-item key="homepage" icon="homepage" current-icon="homepage_fill" title="首页"></i-tab-bar-item>
    <i-tab-bar-item key="quiz" icon="remind" current-icon="remind_fill" title="测评"></i-tab-bar-item>
    <i-tab-bar-item key="mine" icon="mine" current-icon="mine_fill" title="我的"></i-tab-bar-item>
</i-tab-bar>