<i-card>

    <view slot="content">
      <view class="userinfo">
        <view bindtap="totb" class="userinfo-avatar">
          <open-data  type="userAvatarUrl"></open-data>
        </view>
        {{name}} {{school}}
      </view>
      
      <view class="userinfo" style="margin-top:15rpx">
        {{subject}} / {{point}}  {{rankTitle}}{{rank}}
      </view>
      <view class="userinfo">
        <i-alert inline="true" bindtap="checkReport" type="success" show-icon>
          查看报告
        </i-alert>
      </view>
    </view>
</i-card>
<view style='width: 100%;  height: 10rpx' />
<i-card title="功能菜单">
    <view slot="content">
        <view class="container h-pannel-zone">

            <view bindtap="toNewCE" class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">新高考</view>
            </view>

            <view bindtap="toQuiz" class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">测评</view>
            </view>

            <view class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">院校</view>
            </view>

            <view bindtap="toMajorRepo" class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">专业</view>
            </view>
        </view>
    </view>

    <view slot="content">
    <!-- <view class="b-border" style="padding: 15px;">新高考</view> -->
        <view class="container h-pannel-zone">
            <view bindtap="startTest" class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">分数线</view>
            </view>

            <view class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">位次批次</view>
            </view>

            <view bindtap="toUniversityRank" class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">大学排名</view>
            </view>

            <view class="flex-item in-center f-col">
                <view class="flex-item">
                    <image src="../../img/neu.png" style="width:80rpx;height:80rpx"></image>
                </view>
                <view class="flex-item small-font">服务</view>
            </view>
        </view>
    </view>
</i-card>
<view style='width: 100%;  height: 10rpx' />
<i-card title="推荐院校">
<view slot="content">
    <view class="b-border" style="padding-left: 15px;">冲</view>
    <view wx:for="{{optiRec}}">
      <view data-schoolCode="{{item}}" bindtap="schoolInfo">{{index+1}} {{item}}</view>
    </view>
    <view class="b-border" style="padding-left: 15px;">稳</view>
    <view wx:for="{{normRec}}">
      <view data-schoolCode="{{item}}" bindtap="schoolInfo">{{index+1}} {{item}}</view>
    </view>
    <view class="b-border" style="padding-left: 15px;">保</view>
    <view wx:for="{{pessRec}}">
      <view data-schoolCode="{{item}}" bindtap="schoolInfo">{{index+1}} {{item}}</view>
    </view>
</view>
</i-card>
<view style='width: 100%;  height: 10rpx' />
